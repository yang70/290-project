<div class="container">
    <h1>SPORTS!</h1>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>

        <!-- All images are fan-generated art -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://www.thesportsdb.com/images/media/league/fanart/txxqtv1421973480.jpg/preview" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>
                        <a href="/basketball">Click for Basketball Scores!</a>
                    </h3>
                </div>
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.thesportsdb.com/images/media/league/fanart/vvwxuu1421795620.jpg/preview" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>
                        <a href="/hockey">Click for Hockey Scores!</a>
                    </h3>
                </div>
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.thesportsdb.com/images/media/league/fanart/spqxtv1425356374.jpg/preview" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>
                        <a href="/soccer">Click for Soccer Scores!</a>
                    </h3>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>

            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>

            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row justify-content-center">
        {{#if vote}}
        <div class="col">
            <h2>Sport survey results, thanks for voting!</h2>
            <ul>
                {{#each votingResults}}
                <li>{{this.sport}}: {{this.votes}}</li>
                {{/each}}
            </ul>

            <form action="/vote-again" method="post">
                <fieldset>
                    <input class="btn btn-primary" type="submit" value="Vote Again">
                </fieldset>
            </form>
        </div>
        {{else}}
        <div class="col">
            <h2>What sport should be added next?</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="input-group col-8 form-container">
            <form action="/" method="post">
                <fieldset>
                    <label>Baseball
                        <input type="radio" name="newSport" value="baseball">
                    </label>

                    <label>Football
                        <input type="radio" name="newSport" value="football">
                    </label>

                    <label>Tennis
                        <input type="radio" name="newSport" value="tennis">
                    </label>

                    <label>Other
                        <input type="radio" name="newSport" value="other">
                    </label>

                    <br>

                    <input class="btn btn-primary" type="submit" value="Submit">
                </fieldset>
            </form>
        </div>
        {{/if}}
    </div>
</div>
